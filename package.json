{
  "name": "beckon-github-bot",
  "version": "1.0.0",
  "description": "Beckon GitHub Bot",
  "main": "dist/index.js",
  "author": "Mo Kweon",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn lint && tsc",
    "start": "yarn build && node dist/index.js",
    "lint": "tsc --noEmit && tslint --project .",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write *.{js,json,ts} src/**/*.{js,ts,json}",
    "check-github-api": "curl \"https://api.github.com/rate_limit?access_token=$GITHUB_TOKEN\""
  },
  "devDependencies": {
    "@types/node": "^10.9.3",
    "prettier": "^1.14.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@octokit/rest": "^15.10.0"
  }
}
